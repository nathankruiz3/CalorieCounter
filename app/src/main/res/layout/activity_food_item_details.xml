<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="#8BC"
    android:layout_height="match_parent"
    tools:context=".FoodItemDetailsActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/logo"
        android:src="@drawable/apple"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:text="Delete Item"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_below="@id/logo"
        android:background="@drawable/row_bg"
        android:orientation="vertical">

        <TextView
            android:text="holder"
            android:textSize="19sp"
            android:layout_marginTop="38dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsFoodName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCaloriesTitle"
            android:text="Calories:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCaloriesTotal"
            android:text="200"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsDateText"
            android:text="Consumed on.."
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/detsShareButton"
            android:text="@string/share_title"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>


    </LinearLayout>




</RelativeLayout>